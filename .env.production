# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database - Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-lead-finder

# AI Services - Required
OPENAI_API_KEY=your_openai_api_key_here

# External APIs - Optional but recommended
LINKEDIN_API_KEY=your_linkedin_api_key
APOLLO_API_KEY=your_apollo_api_key
HUNTER_API_KEY=your_hunter_api_key
CLEARBIT_API_KEY=your_clearbit_api_key
NEWS_API_KEY=your_news_api_key

# Security - Required
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Client URL for CORS
CLIENT_URL=https://your-domain.com

# Web Scraping
USER_AGENT=Mozilla/5.0 (compatible; AI-Lead-Finder/1.0)
SCRAPING_DELAY=1000

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

